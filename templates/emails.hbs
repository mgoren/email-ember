<h1>Inbox</h1>
<table>
  {{#each email in model}}
    <tr>
      {{#link-to 'email' email.id}}
        <td>{{email.from}}</td>
        <td>{{email.title}}</td>
      {{/link-to}}
    </tr>
  {{/each}}
</table>
<button {{action 'newEmail'}} class="btn btn-info btn-sm"><i class="fa fa-envelope-o"></i> &nbsp; New Message</button>

<div id="myModal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Compose New Message</h4>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="from">From</label>
            {{input id="from" class="form-control" value=from placeholder="From"}}
          </div><div class="form-group">
            <label for="to">To</label>
            {{input id="to" class="form-control" value=to placeholder="To"}}
          </div><div class="form-group">
            <label for="title">Title</label>
            {{input id="title" class="form-control" value=title placeholder="Subject"}}
          </div>
          <div class="form-group">
            <label for="body">Body</label>
            {{textarea id="body" class="form-control" rows="5" value=body placeholder="Enter message here"}}
          </div>
          <button class="btn btn-success" {{action 'send'}}>Send</button>
        </form>
      </div>
    </div>
  </div>
</div>
